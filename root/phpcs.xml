<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="CassidyDC" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/squizlabs/PHP_CodeSniffer/master/phpcs.xsd">
  <description>CassidyDC coding standards for WordPress projects.</description>

  <!-- Directories and files to check -->
  <file>.</file>

  <!-- Exclude the following patterns from the check -->
	<exclude-pattern>build/*</exclude-pattern>
  <exclude-pattern>node_modules/*</exclude-pattern>
	<exclude-pattern>vendor/*</exclude-pattern>

  <!-- Only check PHP files -->
  <arg name="extensions" value="php" />

  <!-- Add colors to CLI reports -->
  <arg name="colors"/>

  <!-- Add progress indicator and source code to CLI reports -->
	<arg value="ps"/>

  <!-- Run sniffs in parallel for faster results. -->
	<arg name="parallel" value="8"/>

  <rule ref="WordPress">
    <!-- Don't use long array syntax -->
    <exclude name="Universal.Arrays.DisallowShortArraySyntax"/>

    <!-- Don't use yoda conditions -->
    <exclude name="WordPress.PHP.YodaConditions" />

		<!-- Allow Class files in CamelCase or Snake_Case -->
    <!-- <exclude name="WordPress.Files.FileName.InvalidClassFileName" /> -->
    <!-- <exclude name="WordPress.Files.FileName.NotHyphenatedLowercase" /> -->
  </rule>

    <!-- Enforce short array syntax -->
  <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>

  <!-- Enforce normal (non-yoda) conditions -->
  <rule ref="Generic.ControlStructures.DisallowYodaConditions" />

  <!-- Change rule from error to warning -->
  <rule ref="Squiz.Commenting.InlineComment.InvalidEndChar">
    <type>warning</type>
  </rule>

</ruleset>
