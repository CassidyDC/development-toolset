{
	"name": "cassidydc/dev-toolset",
	"description": "CassidyDC default PHP code formatting, linting, and static analysis development toolset",
	"version": "1.0.0",
	"keywords": [
		"formatter",
		"linter",
		"php",
		"wordpress",
		"wp"
	],
	"homepage": "https://github.com/CassidyDC/dev-toolset/blob/main/README.md",
	"license": "MIT",
	"authors": [
		{
			"name": "Jacob Cassidy",
			"email": "jacob@cassidydc.com",
			"homepage": "https://cassidydc.com",
			"role": "Developer"
		}
	],
	"support": {
		"issues": "https://github.com/CassidyDC/dev-toolset/issues"
	},
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "^1.1.2",
		"php-parallel-lint/php-console-highlighter": "^1.0",
		"php-parallel-lint/php-parallel-lint": "^1.4",
		"php-stubs/wordpress-stubs": "^6.8.2",
		"phpstan/extension-installer": "^1.4.3",
		"phpstan/phpstan": "^2.1.22",
		"roots/wordpress": "^6.8.2",
		"squizlabs/php_codesniffer": "^3.13.2",
		"swissspidy/phpstan-no-private": "^1.0",
		"szepeviktor/phpstan-wordpress": "^2.0",
		"wp-coding-standards/wpcs": "^3.2"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"phpstan/extension-installer": true
		}
	},
	"scripts": {
		"analyse": "vendor/bin/phpstan analyse --memory-limit=2G || true",
		"format": "vendor/bin/phpcbf",
		"lint": "vendor/bin/phpcs",
		"syntax": "vendor/bin/parallel-lint --exclude vendor --show-deprecated ."
	}
}
